//1 виводить інформацію про користувачів, які були позичені до 2023-01-01
for $info in /Data/info[BorrowingDate <= '2023-01-01']
	return concat($info/BorrowingDate, ": ", $info/Borrower/UserName, " ", $info/Borrower/UserSurname)

//2 виводить юзерів і їхню к-сть позичених книг
for $user in distinct-values(/Data/info/Borrower/concat(UserName, " ", UserSurname))
    return concat($user, ": ", count(/Data/info[Borrower/concat(UserName, " ", UserSurname)= $user]))

